<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="homePane" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/HomeMenuStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="greetings" text="Welcome to:" textFill="WHITE">
         <font>
            <Font size="25.0" />
         </font></Label>
      <Label fx:id="gameTitle" text="Brick Destroy" textFill="WHITE">
         <font>
            <Font size="40.0" />
         </font>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding></Label>
      <Label fx:id="version" text="Version 0.1" textFill="WHITE">
         <font>
            <Font size="10.0" />
         </font>
         <padding>
            <Insets bottom="10.0" />
         </padding></Label>
      <Button fx:id="startButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Start">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="infoButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Info">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="leaderBoardButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="LeaderBoard">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Exit">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</VBox>
